        if tool.requires_api_key and not os.getenv(tool.api_key_env or ""):
            status += " âš "
        
        usage = str(tool.usage_count) if tool.usage_count > 0 else "-"
        
        table.add_row(
            tool.name,
            tool.description[:35] + "..." if len(tool.description) > 35 else tool.description,
